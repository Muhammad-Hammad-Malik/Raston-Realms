@page
@model RastonRealm.Pages.ViewTourInfoModel
@{
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f8f9fa; /* Optional: Set a background color */
        }

        .centered-div {
            max-width: 80%;
            margin: 0 auto;
            text-align: center;
            padding: 20px;
            background-color: #ffffff; /* Optional: Set a background color */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Optional: Add a box shadow */
        }

        img {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
        }
    </style>
    <style>
        .CustomContainer {
            justify-content: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top"
         style="background-color: #000; color: #fff">
        <div class="container">
            <a class="navbar-brand" href="#"> RASTON REALM </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="AdminDashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="AdminInbox">Inbox</a>
                    </li>
                    <!-- Logout button with icon -->
                    <li class="nav-item">
                        <a class="nav-link" href="Index">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="16"
                                 height="16"
                                 fill="currentColor"
                                 class="bi bi-box-arrow-right"
                                 viewBox="0 0 16 16">
                                <path d="M13.5 1a.5.5 0 0 1 .5.5V15a.5.5 0 0 1-1 0V1.5a.5.5 0 0 1 .5-.5z" />
                                <path d="M12.854 2.646a.5.5 0 0 1 0 .708L10.207 6H15a.5.5 0 0 1 0 1H10.207l2.647 2.646a.5.5 0 1 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 0 1 .708 0z" />
                                <path d="M2.5 6a.5.5 0 0 1 .5.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 1 .5-.5z" />
                                <path d="M8 2.5a.5.5 0 0 1 .5.5v10a.5.5 0 0 1-1 0v-10a.5.5 0 0 1 .5-.5z" />
                            </svg>
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="centered-div">
        <h2 class="mb-4">@Model.tourData.TourName</h2>
        <img src="@Url.Content(Model.tourData.TourPhoto)" alt="Your Image" class="img-fluid">
    </div>


    <div class="container mt-3 CustomContainer">
        <div class="text-center">
            <h2 class="heading1">Your Tours</h2>
            <p class="para1">You have enrolled in the following tours:</p>
        </div>
        <table class="table table-hover table-bordered shadow">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">User Name</th>
                    <th class="text-center">Total Seats</th>
                    <th class="text-center">Tour Date</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.orders)
                {
                    <tr>
                        <td class="text-center">@order.UserName</td>
                        <td class="text-center">@order.TotalSeats</td>
                        <td class="text-center">@order.TourDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a class="btn btn-danger" href="OrderCancelAdmin?TourID=@order.OrderID&TourSeats=@order.TotalSeats">Cancel</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Optional: Bootstrap JS (for responsive navigation) -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <footer id="sticky-footer" class="flex-shrink-0 py-4 bg-dark text-white-50">
        <div class="container text-center">
            <small>Copyright &copy; Raston-Realm</small>
        </div>
    </footer>
</body>
